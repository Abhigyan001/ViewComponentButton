<div class="container text-center px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Button Component Demo</h1>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Save Theme Button</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Save theme")) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Sizes</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Small Button", size: :small)) %>
      <%= render(DemoButtonComponent.new(label: "Medium Button", size: :medium)) %>
      <%= render(DemoButtonComponent.new(label: "Large Button", size: :large)) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Styles</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Normal Button", style: :normal)) %>
      <%= render(DemoButtonComponent.new(label: "Primary Button", style: :primary)) %>
      <%= render(DemoButtonComponent.new(label: "Text Button", style: :text)) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Colors</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Primary", color: :primary)) %>
      <%= render(DemoButtonComponent.new(label: "Green", color: :green)) %>
      <%= render(DemoButtonComponent.new(label: "Yellow", color: :yellow)) %>
      <%= render(DemoButtonComponent.new(label: "Red", color: :red)) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">States</h2>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2">Focus State</h3>
      <div class="flex flex-wrap gap-4 items-center justify-center">
        <%= render(DemoButtonComponent.new(label: "Normal Button", style: :normal, state: :focus, custom_classes: "focus:outline-blue-900")) %>
        <%= render(DemoButtonComponent.new(label: "Primary Button", style: :primary, state: :focus, custom_classes: "focus:outline-blue-500")) %>
        <%= render(DemoButtonComponent.new(label: "Text Button", style: :text, state: :focus)) %>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2">Hover State</h3>
      <div class="flex flex-wrap gap-4 items-center justify-center">
        <%= render(DemoButtonComponent.new(label: "Normal Button", style: :normal, state: :hover, custom_classes: "hover:bg-blue-400 hover:text-white")) %>
        <%= render(DemoButtonComponent.new(label: "Primary Button", style: :primary, state: :hover, custom_classes: "hover:bg-blue-800")) %>
        <%= render(DemoButtonComponent.new(label: "Text Button", style: :text, state: :hover, custom_classes: "hover:bg-gray-400 hover:text-white")) %>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2">Active State</h3>
      <div class="flex flex-wrap gap-4 items-center justify-center">
        <%= render(DemoButtonComponent.new(label: "Normal Button", style: :normal, state: :active)) %>
        <%= render(DemoButtonComponent.new(label: "Primary Button", style: :primary, state: :active)) %>
        <%= render(DemoButtonComponent.new(label: "Text Button", style: :text, state: :active)) %>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2">Disabled State</h3>
      <div class="flex flex-wrap gap-4 items-center justify-center">
        <%= render(DemoButtonComponent.new(label: "Normal Button", style: :normal, state: :disabled)) %>
        <%= render(DemoButtonComponent.new(label: "Primary Button", style: :primary, state: :disabled)) %>
        <%= render(DemoButtonComponent.new(label: "Text Button", style: :text, state: :disabled)) %>
      </div>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">With Icons</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Save theme", icon: "document-check", icon_position: :left)) %>
      <%= render(DemoButtonComponent.new(label: "Next", icon: "arrow-right", icon_position: :right)) %>
      <%= render(DemoButtonComponent.new(label: "Add Item", icon: "plus")) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Icon Variants</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Solid Icons", icon: "user", type: :solid)) %>
      <%= render(DemoButtonComponent.new(label: "Outline Icons", icon: "home", type: :outline)) %>
    </div>
  </section>

  <section class="mb-8 text-center ">
    <h2 class="text-xl font-semibold mb-4">Combined Examples</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Save theme", size: :medium, style: :default, icon: "document-check")) %>
      <%= render(DemoButtonComponent.new(label: "Delete", size: :small, style: :primary, color: :red, icon: "trash")) %>
      <%= render(DemoButtonComponent.new(label: "View more", size: :large, style: :text, icon: "arrow-right", icon_position: :right, state: :focus)) %>
    </div>
  </section>

  <section class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Common Heroicons</h2>
    <div class="flex flex-wrap gap-4 items-center justify-center">
      <%= render(DemoButtonComponent.new(label: "Edit", icon: "pencil-square")) %>
      <%= render(DemoButtonComponent.new(label: "Download", icon: "arrow-down-tray")) %>
      <%= render(DemoButtonComponent.new(label: "Search", icon: "magnifying-glass")) %>
      <%= render(DemoButtonComponent.new(label: "Settings", icon: "cog-6-tooth")) %>
      <%= render(DemoButtonComponent.new(label: "Refresh", icon: "arrow-path")) %>
    </div>
  </section>
</div>
